<div class="container">
    <div class='col-md-6 col-md-offset-3'>  
        <p class='error'> We got your email already, just set password to make your account active </p>
        <%= form_tag set_password_path, method: :put do %>
            <div class="form_group">
                <%= hidden_field_tag 'token', @token %>
                <%= hidden_field_tag 'email', @user.email %>
                <%= label_tag :password, "password", class: 'label' %><br>
                <%= password_field_tag :password, nil,
                    placeholder: "Enter a password", class: 'form-control' %> <br>
                <%= label_tag :password_confirmation, "password confirmation", class: 'label' %><br>
                <%= password_field_tag :password_confirmation, nil,
                    placeholder: "Confirm your password", class: 'form-control' %> <br>        
                <%= submit_tag :submit, class: 'btn btn-success' %>
            </div>
        <% end %>
    </div>
</div>