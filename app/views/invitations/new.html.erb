<div class='container'>
    <%= render partial: "shared/errors", locals: {instance: @form} %>
    
    <div class='col-md-6 col-md-offset-3'>
        <%= link_to "Back", edit_game_path(@game), class: 'btn btn-primary' %>
            <%= form_tag game_invitations_path do %>
            <%= hidden_field_tag 'inviter', "#{current_user.email}" %> 
            <%= label_tag :email, "Add new player: ", class: 'label' %> <br>
            <%= text_field_tag :email, nil, placeholder: "Type email address", class: 'form-control' %> <br>
            <%= submit_tag :submit , class: 'btn btn-success' %><br>
        <% end %>
    </div>
</div>