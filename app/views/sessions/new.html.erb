<div class='container'>
    <div class='col-md-6 col-md-offset-3'> 
        <%= render partial: "shared/errors", locals: {instance: @form} %> 
        <%= form_tag sessions_path, method: :post do |f| %>
            <%= label_tag 'email', "email" , class: 'label' %>
            <%= email_field_tag 'session[email]', nil, class: 'form-control' %>
            
            <%= label_tag 'password', "password", class: 'label' %>
            <%= password_field_tag 'session[password]', nil, class: 'form-control' %>
            
            <%= submit_tag "Sign in", class: "btn btn-primary" %>
        <% end %>
    </div>
</div>    